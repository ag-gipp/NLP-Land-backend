{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "test/lib",
    "rootDir": "test",
    "strict": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["test/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "lib", "test/lib/**/**"]
}